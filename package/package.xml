<assembly xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.0.0.xsd">
    <id>assembly</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>lib</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/</directory>
            <outputDirectory>/config</outputDirectory>
            <includes>
                <include>*.properties</include>
                <include>*.xml</include>
                <include>*.data</include>
                <include>application.yml</include>
                <include>application-datasource.yml</include>
                <include>application-mybatis.yml</include>
                <include>application-kafka.yml</include>
                <include>application-*-${profileActive}.yml</include>
                <include>application-${profileActive}.yml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/mapperServer/</directory>
            <outputDirectory>/mapperServer</outputDirectory>
            <includes>
                <include>*.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/bin/</directory>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>*.sh</include>
                <include>*.py</include>
            </includes>
            <!--如果是脚本，一定要改为unix.如果是在windows上面编码，会出现dos编写问题-->
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../package/bin/</directory>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>*.sh</include>
                <include>*.py</include>
                <include>crontab*</include>
            </includes>
            <!--如果是脚本，一定要改为unix.如果是在windows上面编码，会出现dos编写问题-->
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>.build</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../</directory>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>.build</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../sql/${project.version}</directory>
            <outputDirectory>/sql</outputDirectory>
            <includes>
                <include>${project.artifactId}__${project.version}.sql</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../sql/update</directory>
            <outputDirectory>/sql/update</outputDirectory>
            <includes>
                <include>${project.version}__${project.artifactId}__*.sql</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../bin/${project.version}/${project.artifactId}</directory>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>*.sh</include>
                <include>*.py</include>
            </includes>
            <!--如果是脚本，一定要改为unix.如果是在windows上面编码，会出现dos编写问题-->
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../package/tools/</directory>
            <outputDirectory>/bin/tools</outputDirectory>
            <includes>
                <include>*.zip</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>

</assembly>